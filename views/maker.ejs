<!DOCTYPE html>
<html dir="ltr" lang="en-US">
<% include ./partials/head %>

<body>

  <div class="container-fluid" style="text-align:center;">
    <div class="row" style="background-color:#3A539B;">
      <div class="col-md-4 col-md-offset-4">
      <a href="/">  <img src="https://s3.amazonaws.com/aws-website-portfoliosite-bf6tr/patron-messenger-short-header.png" class="img-responsive"></img></a>
      </div>
    </div>

    <div class="row">

      <div class="col-md-4 col-md-offset-4">

        <h1> Bar Maker </h1>
        <form action="/stages" method="post">
          <div class="form-group">
              <label>Title</label>
              <input type="text" class="form-control" name="title">
          </div>
          <div class="form-group">
              <label>Image URL</label>
              <input type="text" class="form-control" name="image_url">
          </div>
          <div class="form-group">
              <label>Directions URL</label>
              <input type="text" class="form-control" name="direction_url">
          </div>
          <div class="form-group">
              <label>Price</label>
              <input type="text" class="form-control" name="price">
          </div>
          <div class="form-group">
              <label>Address</label>
              <input type="text" class="form-control" name="address">
          </div>
          <div class="form-group">
              <label>Type</label>
              <select name="type">
                <option value="chill">Chill Spot</option>
                <option value="club">Club</option>
                <option value="dancing">Dancing Bar</option>
                <option value="date spot">Date Spot (quiet, good food and drinks)</option>
                <option value="college bar">College Bar</option>
                <option value="dive bar">Dive Bar</option>
              </select>
          </div>
          <div class="form-group">
              <label>Borough</label>
              <select name="borough">
                  <option value="brooklyn">Brooklyn</option>
                  <option value="queens">Queens</option>
                  <option value="manhattan">Manhattan</option>
                  <option value="li">Long Island</option>
              </select>
          </div>

          <button type="submit" class="btn btn-primary btn-md outline" >Add to Menu</button>
      </form>

  <div style="height:100px;"></div>
      </div>

    </div>
  </div>

</body>
